<Application x:Class="SistemaTallerAutomorizWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SistemaTallerAutomorizWPF"
             xmlns:cc="clr-namespace:SistemaTallerAutomorizWPF.CustomControls"
             Startup="ApplicationStart">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Estilo para el PlaceholderTextBox -->
            <Style TargetType="{x:Type cc:PlaceHolderforTextBox}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
