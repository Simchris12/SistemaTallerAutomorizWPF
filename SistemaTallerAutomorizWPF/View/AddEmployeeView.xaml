<Window x:Class="SistemaTallerAutomorizWPF.View.AddEmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SistemaTallerAutomorizWPF.ViewModels" 
        xmlns:cc="clr-namespace:SistemaTallerAutomorizWPF.CustomControls"
        xmlns:local="clr-namespace:SistemaTallerAutomorizWPF.View"
        mc:Ignorable="d"
        Title="AddEmployeeView" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <cc:PlaceHolderforTextBox x:Name="NombreTextBox" PlaceHolder="Nombre"/>
            <cc:PlaceHolderforTextBox x:Name="ApellidoTextBox" PlaceHolder="Apellido"/>
            <cc:PlaceHolderforTextBox x:Name="CedulaTextBox" PlaceHolder="Cédula"/>
            <cc:PlaceHolderforTextBox x:Name="TelefonoTextBox" PlaceHolder="Teléfono"/>
            <cc:PlaceHolderforTextBox x:Name="EmailTextBox" PlaceHolder="Correo electrónico"/>
            <cc:PlaceHolderforTextBox x:Name="CargoTextBox" PlaceHolder="Cargo"/>
            <cc:PlaceHolderforTextBox x:Name="RolTextBox" PlaceHolder="Rol"/>
        </StackPanel>

        <Button Grid.Row="1"
            Content="Guardar"
            Click="GuardarEmpleado_Click"
            HorizontalAlignment="Right"
            Margin="0,20,0,0"/>
    </Grid>
</Window>
